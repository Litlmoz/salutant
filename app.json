{
  "name": "salutant",
  "description": "Process form submissions from static sites.",
  "scripts": {
    "postdeploy": "rake db:migrate; rake db:seed"
  },
  "env": {
    "ADMIN_EMAIL": {
      "required": true
    },
    "ADMIN_PW": {
      "required": true
    },
    "DEMO_EMAIL": {
      "required": true
    },
    "DEMO_PW": {
      "required": true
    },
    "DATABASE_URL": {
      "required": true
    },
    "GMAIL_USERNAME": {
      "required": true
    },
    "GMAIL_PASSWORD": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "REPLY_TO": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
