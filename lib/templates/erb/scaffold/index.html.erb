<h1><%= plural_table_name.titleize %></h1>

<table class='table table-hover'>
  <thead>
    <tr>
      <% attributes.reject(&:password_digest?).each do |attribute| -%><th class="text-center"><%= attribute.human_name %></th>
      <% end -%><th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
        <%- attributes.reject(&:password_digest?).each do |attribute| -%>
        <td class="text-center"><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <%- end -%>
        <td class="text-center">
          <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-info-sign"></span>
          <%% end %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>

<%%= link_to 'New <%= singular_table_name.titleize %>', new_<%= singular_table_name %>_path, class: 'btn btn-block btn-primary' %>
