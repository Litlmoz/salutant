<!DOCTYPE html>
<html>
<head>
  <title><%= if content_for?(:title) then yield(:title) end %></title>
  <%= render 'favicon' %>
  <meta charset="utf-8"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name='description' content='<%= yield_meta_tag(:description, 'Default description') %>' />

  <%= action_cable_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= csrf_meta_tags %>

  <!--[if lt IE 9]>
  <script
      src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
  <script
      src="//cdnjs.cloudflare.com/ajax/libs/json3/3.3.2/json3.min.js"></script>
  <script
      src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js"></script>
  <![endif]-->
</head>

<body>
  <header>
    <%= render 'navigation' %>
  </header>

  <% if content_for? :heading %>
    <div class="page-header">
      <h1><%= yield :heading %></h1>
    </div>
  <% end %>

  <main role="main" class="container">
    <%= render 'flash' %>
    <%= yield %>
  </main>

  <footer>
    <hr/>
    <div class="container">
      <%= render 'footer' %>
    </div>
  </footer>
</body>
</html>
