@import 'bootstrap/variables';

.alert-notice {
  @extend .alert-success;
}

.alert-alert {
  @extend .alert-danger;
}

img {
  @extend .img-responsive;
}

.validation-error {
  margin-top: 2px;
  color: $brand-danger;
  font-size: $font-size-small;
}

.page-header {
  background-color: $brand-primary;
  margin-top: 0;
  padding: 15px;
}

table {
  th {
    text-align: center;
  }
  td {
    text-align: center;
  }
}
