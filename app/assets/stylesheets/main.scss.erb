@import 'bootstrap/variables';

.alert-notice {
  @extend .alert-success;
}

.alert-alert {
  @extend .alert-danger;
}

img {
  @extend .img-responsive;
}

.validation-error {
  margin-top: 2px;
  color: $brand-danger;
  font-size: $font-size-small;
}

body {
  padding-top: 50px;
}

.page-header {
  background-color: #FCC;
  margin-top: 0;
  padding: 15px;
}

.navbar-brand {
  min-width: 50px;
  padding: 8px;
}

table {
  th {
    text-align: center;
  }
  td {
    text-align: center;
  }
}
